[Unit]
Description=Tailscale first boot configuration
After=tailscaled.service network-online.target
Wants=network-online.target
ConditionPathExists=!/etc/tailscale-configured

[Service]
Type=idle
ExecStart=/usr/local/bin/tailscale-first-boot
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty3
TTYReset=yes
TTYVHangup=yes
RemainAfterExit=yes
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target
